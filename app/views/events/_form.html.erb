<%= form_with(model: event, local: true) do |form| %>
  <% if event.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(event.errors.count, "error") %> prohibited this event from being saved:</h2>

      <ul>
      <% event.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :title,"タイトル" %>
    <%= form.text_field :title %>
  </div>

  <div class="field">
    <%= form.label :start_datetime,"開催日時" %>
    <%= form.datetime_select :start_datetime %>
  </div>

  <div class="field">
    <%= form.label :end_datetime,"終了日時" %>
    <%= form.datetime_select :end_datetime %>
  </div>

  <div class="field">
    <%= form.label :prefecture, "開催エリア" %>
    <%= form.select(:prefecture, options_for_select([[''],['東京都'], ['大阪府'],['神奈川県'],['愛知県'] ])) %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
